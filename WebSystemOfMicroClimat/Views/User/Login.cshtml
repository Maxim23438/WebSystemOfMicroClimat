@model User
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="login-box">
    <h2>Авторизація</h2>
    <form asp-action="Login">
        <div class="user-box">
            <input type="text" name="name" id="name" asp-for="Name" required="">
            <label asp-for="Name">Логін</label>
        </div>
        <div class="user-box">
            <input asp-for="Password" type="password" name="password" id="password" required="">
            <label asp-for="Password">Пароль</label>
        </div>
        <div>
            <button type="submit" value="Login">Підтвердити</button>
        </div>
    </form>
</div>
