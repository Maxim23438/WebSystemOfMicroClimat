<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="login-box">
    <h2>Login</h2>
    <form>
        <div class="user-box">
            <input type="text" name="name" id="name" required="">
            <label>Логін</label>
        </div>
        <div class="user-box">
            <input type="password" name="password" id="password" required="">
            <label>Пароль</label>
        </div>
        <div>
            <button type="submit">Підтвердити</button>
        </div>
    </form>
</div>
