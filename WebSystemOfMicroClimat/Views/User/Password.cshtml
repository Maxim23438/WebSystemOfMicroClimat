@model User
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<div class="login-box">
    <h2>Зміна паролю</h2>
    <form asp-action="Password">
        <div class="user-box">
            <input asp-for="Name" type="text" name="name" id="name" required="">
            <label asp-for="Name">Логін</label>
        </div>
        <div class="user-box">
            <input asp-for="Password" type="password" name="password" id="password" required="">
            <label asp-for="Password">Введіть новий пароль</label>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert">@ViewBag.ErrorMessage</div>
        }
        <div>
            <button type="submit" value="Password">Змінити</button>
        </div>
    </form>
</div>
