@model User
<link rel="stylesheet" href="~/css/AdminPanel.css" asp-append-version="true" />
<body class="body">
    <nav>
        <h1><a asp-controller="" asp-action="" id="atext">EcoComfort</a></h1>
        <ul>
            <li><a asp-controller="BasePage" asp-action="Index">На головну</a></li>
        </ul>
    </nav>
    <div class="container">
        <main>
            <h2>Редагування користувача</h2>

            <form action="EditUser" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <div>
                    <label asp-for="Name">Ім'я:</label>
                    <input asp-for="Name" type="text" name="Name" id="Name" value="@Model.Name" />
                </div>

                <div>
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" name="Email" id="Email" value="@Model.Email" />
                </div>
               <div>
                    @Html.CheckBox("IsPayment", Model.IsPayment)
                    <label asp-for="IsPayment"> Тарифний план</label><br>
               </div>

                <div>
                    <button type="submit">Зберегти зміни</button>
                </div>
            </form>
        </main>
    </div>
</body>

