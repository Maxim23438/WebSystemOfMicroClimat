@model Temp


<link rel="stylesheet" href="~/css/TempOsvVol.css" asp-append-version="true" />
<body class="body">
    <nav>
        <h1><a asp-controller="Value" asp-action="Index" id="atext">Управління мікрокліматом</a></h1>
        <ul>
            <li><a asp-controller="Value" asp-action="Cab">Особистий кабінет</a></li>
            <li><a asp-controller="Value" asp-action="Plan">Тарифний план</a></li>
            <li><a asp-controller="Temp" asp-action="Temp">Температура</a></li>
            <li><a asp-controller="Humidity" asp-action="Humidity">Вологість</a></li>
            <li><a asp-controller="Light" asp-action="Light">Світло</a></li>
            <li><a asp-controller="BasePage" asp-action="Index">Вийти</a></li>
        </ul>
    </nav>
    <div class="container">
        <main>
            <section>
                <form asp-action="Temp">
                    <div class="check">
                        <label for="1">Ввімкнути батареї?</label>
                        <label class="switch">
                            @Html.CheckBox("Battery", (bool)@ViewBag.Battery, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="2">Ввімкнути котел?</label>
                        <label class="switch">
                            @Html.CheckBox("Kotel", (bool)@ViewBag.Kotel, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="3">Ввімкнути підлогу з підігрівом?</label>
                        <label class="switch">
                            @Html.CheckBox("Bottom", (bool)@ViewBag.Bottom, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="4">Ввімкнути камін?</label>
                        <label class="switch">
                            @Html.CheckBox("Kamin", (bool)@ViewBag.Kamin, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="5">Ввімкнути обігрівач?</label>
                        <label class="switch">
                            @Html.CheckBox("Obigriv", (bool)@ViewBag.Obigriv, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="6">Ввімкнути кондиціонер?</label>
                        <label class="switch">
                            @Html.CheckBox("Cond",(bool)@ViewBag.Cond, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="7">Ввімкнути лампу для нагрівання?</label>
                        <label class="switch">
                            @Html.CheckBox("Lamp", (bool)@ViewBag.Lamp, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div>
                        <button type="submit" value="Temp">Підтвердити</button>
                    </div>
                </form>
                    
            </section>
        </main>
    </div>
    <footer class="footer">
        <p>&copy; 2023 Управління мікрокліматом</p>
