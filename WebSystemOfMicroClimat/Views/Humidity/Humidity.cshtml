@model Humidity

<link rel="stylesheet" href="~/css/TempOsvVol.css" asp-append-version="true" />

<body class="body">
    <nav>
        <h1><a asp-controller="Value" asp-action="Index" id="atext">Управління мікрокліматом</a></h1>
        <ul>
            <li><a asp-controller="Value" asp-action="Cab">Особистий кабінет</a></li>
            <li><a asp-controller="Value" asp-action="Plan">Тарифний план</a></li>
            <li><a asp-controller="Temp" asp-action="Temp">Температура</a></li>
            <li><a asp-controller="Humidity" asp-action="Humidity">Вологість</a></li>
            <li><a asp-controller="Light" asp-action="Light">Світло</a></li>
            <li><a asp-controller="BasePage" asp-action="Index">Вийти</a></li>
        </ul>
    </nav>
    <div class="container">
        <main>
            <section>
                <form asp-action="Humidity">
                    <div class="check">
                        <label for="1">Ввімкнути зволожувач  повітря?</label>
                        <label class="switch">
                            @Html.CheckBox("Humidifier", (bool)@ViewBag.Humidifier, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="2">Ввімкнути вентилятор?</label>
                        <label class="switch">
                            @Html.CheckBox("Fan", (bool)@ViewBag.Fan, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="3">Ввімкнути дезгідратор?</label>
                        <label class="switch">
                            @Html.CheckBox("Dehydrator", (bool)@ViewBag.Dehydrator, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="4">Ввімкнути захист від запотівання?</label>
                        <label class="switch">
                            @Html.CheckBox("Protector", (bool)@ViewBag.Protector, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="5">Ввімкнути регулятор повітря?</label>
                        <label class="switch">
                            @Html.CheckBox("Regulator", (bool)@ViewBag.Regulator, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="check">
                        <label for="6">Ввімкнути гігрометр?</label>
                        <label class="switch">
                            @Html.CheckBox("Hygrometer", (bool)@ViewBag.Hygrometer, new { @class = "exclusive" })
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div>
                        <button type="submit" value="Humidity">Підтвердити</button>
                    </div>
                </form>

            </section>
        </main>
    </div>
    <footer class="footer">
        <p>&copy; 2023 Управління мікрокліматом</p>
